generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Skill {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  questions Question[]
}

model Question {
  id        Int     @id @default(autoincrement())
  skill     Skill   @relation(fields: [skillId], references: [id])
  skillId   Int
  text      String
  embedding Json    // Store as float[] in Postgres
}
